extends layout

block content
  div.container
    h1 MoniCron 
    p Monitor your cronjobs
    table.table.table-striped
      thead
        tr
          th Server
          th Job ID
          th Freq.
          th Started
          th Ended
          th Status
      tbody#cronjob-list


  script#item-template(type='text/template')
    td <%= server %>
    td <%= job_id %>
    td <%= frequency %>
    td <%= started %>
    td <% print('---'); %>
    td
      | <% switch(state.id) { case 0: %>
      | <span class="label label-success"><%= state.name %></span>
      | <% break; case 1 : %>
      | <span class="label label-primary"><%= state.name %></span>
      | <% break; } %>
